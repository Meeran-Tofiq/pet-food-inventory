extends layout 

block content 
  div.create-page.with-background
    h1= title

    div.form-container
      form(method="POST" enctype="multipart/form-data") 
        label(for="animal_type") Animal: 
        input#animal_type.form-control(type="text" placeholder="Dog, Cat, Mouse, etc..." name="animal_type" requied value=(category ? category.animal_type : ''))
        label(for="animal_image") Image:
        input#animal_image(type="file" name="avatar") 
        button(type="submit") Submit 
    if(errors)
      ul.errors
        each error in errors 
          li!= error.msg
        