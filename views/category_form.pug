extends layout 

block content 
  div.create-page.with-background
    h1= title

    div.form-container
      form(method="POST") 
        label(for="animal_type") Animal: 
        input#animal_type.form-control(type="text" placeholder="Dog, Cat, Mouse, etc..." name="animal_type" requied value=(category ? category.animal-type : ''))
        button(type="submit") Submit 
    if(errors)
      ul
        each error in errors 
          li!= error.message
        